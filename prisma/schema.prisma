generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ContactType {
  tenant
  lead
}

enum LeaseStatus {
  draft
  active
  ended
}

model Landlord {
  id         String     @id @default(cuid())
  name       String
  email      String     @unique
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  users      User[]
  contacts   Contact[]
  properties Property[]
  units      Unit[]
  leases     Lease[]
}

model User {
  id           String   @id @default(cuid())
  landlordId   String
  name         String
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  landlord     Landlord @relation(fields: [landlordId], references: [id], onDelete: Cascade)

  @@index([landlordId])
}

model Contact {
  id         String      @id @default(cuid())
  landlordId String
  type       ContactType
  name       String
  email      String?
  phone      String?
  tags       String[]
  status     String
  notes      String?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  landlord   Landlord    @relation(fields: [landlordId], references: [id], onDelete: Cascade)
  leases     Lease[]

  @@index([landlordId])
}

model Property {
  id          String   @id @default(cuid())
  landlordId  String
  name        String
  address1    String
  address2    String?
  city        String
  state       String
  postalCode  String
  country     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  landlord    Landlord @relation(fields: [landlordId], references: [id], onDelete: Cascade)
  units       Unit[]

  @@index([landlordId])
}

model Unit {
  id          String   @id @default(cuid())
  landlordId  String
  propertyId  String
  unitLabel   String
  bedrooms    Int
  bathrooms   Decimal  @db.Decimal(4, 2)
  rent        Decimal  @db.Decimal(12, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  landlord    Landlord @relation(fields: [landlordId], references: [id], onDelete: Cascade)
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  leases      Lease[]

  @@index([landlordId])
  @@index([propertyId])
}

model Lease {
  id         String      @id @default(cuid())
  landlordId String
  unitId     String
  contactId  String
  startDate  DateTime
  endDate    DateTime
  rent       Decimal     @db.Decimal(12, 2)
  deposit    Decimal     @db.Decimal(12, 2)
  status     LeaseStatus
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  landlord   Landlord    @relation(fields: [landlordId], references: [id], onDelete: Cascade)
  unit       Unit        @relation(fields: [unitId], references: [id], onDelete: Cascade)
  contact    Contact     @relation(fields: [contactId], references: [id], onDelete: Cascade)

  @@index([landlordId])
  @@index([unitId])
  @@index([contactId])
}
